{
  "name": "reki",
  "version": "0.0.0",
  "description": "Finnjamboree 2016 camp registry system",
  "main": "src/server/server.js",
  "scripts": {
    "start": "node .",
    "test": "npm run linter && npm run test-mocha",
    "linter": "eslint src",
    "test-mocha": "mocha --compilers js:babel-core/register"
  },
  "dependencies": {
    "babel-core": "^6.2.1",
    "babel-preset-es2015": "^6.1.18",
    "bluebird": "^3.0.5",
    "body-parser": "^1.14.1",
    "compression": "^1.6.0",
    "cors": "^2.7.1",
    "errorhandler": "^1.4.2",
    "loopback": "^2.25.0",
    "loopback-boot": "^2.14.2",
    "loopback-connector-postgresql": "^2.4.0",
    "loopback-datasource-juggler": "^2.43.0",
    "serve-favicon": "^2.3.0"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "chai-as-promised": "^5.1.0",
    "eslint": "^1.10.2",
    "eslint-plugin-react": "^3.10.0",
    "mocha": "^2.3.4"
  },
  "engines": {
    "node": "~4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:partio-scout/reki.git"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "ecmaFeatures": {
      "modules": true,
      "classes": true,
      "arrowFunctions": true,
      "blockBindings": true,
      "forOf": true,
      "destructuring": true,
      "defaultParams": true,
      "objectLiteralComputedProperties": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "jsx": true,
      "templateStrings": true,
      "spread": true,
      "restParams": true
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "comma-dangle": 0,
      "strict": 0,
      "no-throw-literal": 2,
      "consistent-this": [
        1,
        "that"
      ],
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "semi": 2,
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "no-unused-vars": [
        2,
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "handle-callback-err": [
        2,
        "^(err|.+Err(or)?)$"
      ],
      "no-shadow-restricted-names": 2,
      "no-use-before-define": [
        2,
        "nofunc"
      ],
      "eol-last": 2,
      "no-multiple-empty-lines": [
        2,
        {
          "max": 1
        }
      ],
      "no-underscore-dangle": 0,
      "object-curly-spacing": [
        2,
        "always"
      ],
      "no-trailing-spaces": [
        2,
        {
          "skipBlankLines": false
        }
      ],
      "space-after-keywords": [
        2,
        "always"
      ],
      "jsx-quotes": 1,
      "react/display-name": 0,
      "react/jsx-boolean-value": 1,
      "react/jsx-no-undef": 1,
      "react/jsx-sort-props": 0,
      "react/jsx-uses-react": 1,
      "react/jsx-uses-vars": 1,
      "react/jsx-curly-spacing": [
        2,
        "always"
      ],
      "react/no-did-mount-set-state": 1,
      "react/no-did-update-set-state": 1,
      "react/no-unknown-property": 1,
      "react/prop-types": 1,
      "react/react-in-jsx-scope": 1,
      "react/self-closing-comp": 1,
      "react/wrap-multilines": 1
    }
  },
  "private": true,
  "licence": "UNLICENCED"
}
